params {
    //global
    threads=12

    //if you want to skip the step, swith the proper variable below to 'true'
    skip_qc=false
    skip_preprocess=false
    skip_remove_host=false
    skip_map=false
    skip_taxclassify=false
    skip_assembly=false
    skip_polish=false
    skip_blast=false
    skip_zoonosis=false

    //preprocess
    save_preprocessed=true

    illumina_min_read_quality=8
    nanopore_min_read_length=200
    nanopore_min_read_quality=8

    //remove_host
    save_host_removed=true
    host_genome=null

    //map
    save_bam=false
    ref=null
    dir_ref=null
    min_avg_dep=1.0

    //taxonomic classificaiton
    kraken2_confidence_threshold=0.1

    //assembly
    spades_options='--meta'
    flye_options='--meta'
    megahit_options=''
    canu_options='genomeSize=5m minReadLength=300 minOverlapLength=50 maxThreads=12 minInputCoverage=0 stopOnLowCoverage=0 corOutCoverage=10000 corMhapSensitivity=high corMinCoverage=0 redMemory=32 oeaMemory=32 batMemory=200 useGrid=false'
    min_contig_length=600

    //polish
    medaka_model='r941_min_high_g303'

    //blast
    min_evalue='1.0e-5'
    min_blast_aln_len=100
}

process {
    conda='/opt/conda/envs/virpipe'

    withName:zoonotic_rank_run {
        container='/opt/conda/envs/zoonotic_rank'
    }
}

conda {
    enabled=true
}
